<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InterestButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/ic_launcher_background</item>

        <item name="android:padding">10dp</item>
    </style>

    <!-- Style for circular images -->
    <style name="circularImageView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Circle</item>
    </style>

    <!-- Overlay for circular shape appearance -->
    <style name="ShapeAppearanceOverlay.App.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>

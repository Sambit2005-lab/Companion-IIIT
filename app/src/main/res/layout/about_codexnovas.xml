<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".about_codexnovas"
    android:background="@drawable/page_bckg"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:id="@+id/info_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="150dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/background_pfp"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:background="#d9d9d9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </ImageView>

                    <ImageView
                        android:id="@+id/pfp_holder"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="80dp"
                        android:background="@drawable/circular_pfp_holder"
                        app:layout_constraintEnd_toStartOf="@+id/society_name"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </ImageView>

                    <TextView
                        android:id="@+id/society_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="152dp"
                        android:text="Code-X-Novas"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="110dp"
                        app:layout_constraintTop_toTopOf="parent">

                    </TextView>

                    <TextView
                        android:id="@+id/iiit_bhubaneswar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IIIT BHUBANESWAR"
                        android:textColor="#000000"
                        app:layout_constraintTop_toBottomOf="@id/society_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginLeft="110dp"
                        app:layout_constraintStart_toStartOf="parent">

                    </TextView>

                    <ImageView
                        android:id="@+id/dashed_line"
                        android:layout_width="360dp"
                        android:layout_height="2dp"
                        android:background="#373B93"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pfp_holder"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:padding="8dp">

                    </ImageView>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="About Us"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    >

                </TextView>

                <TextView
                    android:id="@+id/about_us_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Codex Novas is a passionate and dynamic group of developers at IIIT Bhubaneswar, united by a shared love for coding, innovation, and teamwork. As a team, we thrive on solving complex real-world problems through cutting-edge technology. Whether it’s backend development, AI/ML solutions, or web and mobile app creation, we continuously push the boundaries of our skills to create impactful solutions.
"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="12dp"
                    android:textColor="#000000"
                    android:textSize="16sp">

                </TextView>

                <TextView
                    android:id="@+id/what_do_we_do"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Our Vison..."
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    >

                </TextView>

                <TextView
                    android:id="@+id/what_do_we_do_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We aim to keep growing as a team by continuing to innovate and take part in national and international tech competitions. We believe in learning from every experience and using that knowledge to make a positive impact."
                    android:paddingLeft="8dp"
                    android:autoLink="web"
                    android:paddingRight="8dp"
                    android:paddingBottom="12dp"
                    android:textColor="#000000"
                    android:textSize="16sp">

                </TextView>

                <TextView
                    android:id="@+id/Our_Events"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Our Achievements.."
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    >

                </TextView>

                <TextView
                    android:id="@+id/Our_Events_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="	•	Hackathon Champions: We’ve consistently ranked at the top in numerous hackathons, showcasing our ability to rapidly prototype and deliver creative solutions under pressure.\n\n
	•	Diverse Skillset: With expertise ranging from Java Spring Boot for backend development to AI/ML models, we handle a wide range of projects.\n\n
	•	Leadership and Innovation: As a team, we pride ourselves on thinking outside the box and tackling complex challenges head-on."
                    android:autoLink="web"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="12dp"
                    android:textColor="#000000"
                    android:textSize="16sp">

                </TextView>

                <LinearLayout
                    android:id="@+id/event_image_holder"
                    android:orientation="vertical"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/our_events_recyclerview_codexnovas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/team_members"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Meet our team"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:paddingTop="12dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        >

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/team_members_recyclerview_codexnovas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>



                    <TextView
                        android:id="@+id/contact_us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Contact Us"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:paddingTop="12dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        >

                    </TextView>

                    <TextView
                        android:id="@+id/contact_us_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit.\n\n Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="12dp"
                        android:textColor="#000000"
                        android:textSize="16sp">

                    </TextView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/contact_us_codexnovas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Us"
                        >

                    </androidx.appcompat.widget.AppCompatButton>


                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
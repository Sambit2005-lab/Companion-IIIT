<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">

    <TextView
        android:id="@+id/step1"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/notosans_regular"
        android:text="Step 1 of 4"
        android:textSize="12dp"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="307dp"
        android:layout_height="52dp"
        android:layout_below="@+id/step1"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/loadingbar"/>

    <TextView
        android:id="@+id/buildprof"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_centerInParent="true"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/notosans_regular"
        android:text="Let's build your profile."
        android:textSize="30dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lessthan"
        android:layout_width="361dp"
        android:layout_height="45dp"
        android:layout_below="@id/buildprof"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/notosans_regular"
        android:text="It takes less than 2 minutes."
        android:textSize="13dp"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="327dp"
        android:layout_height="38dp"
        android:layout_below="@+id/lessthan"
        android:layout_centerInParent="true"
        android:fontFamily="@font/notosans_regular"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:text="Full Name"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/edittext1"
        android:layout_width="337dp"
        android:layout_height="50dp"
        android:layout_below="@+id/name"
        android:layout_centerInParent="true"
        android:layout_marginTop="-13dp"
        android:background="@drawable/edit_text_border"></EditText>

    <TextView
        android:id="@+id/email"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext1"
        android:layout_centerInParent="true"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/notosans_regular"
        android:text="Your Email ID"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/emailinput"
        android:layout_width="337dp"
        android:layout_height="50dp"
        android:layout_below="@+id/email"
        android:layout_centerInParent="true"
        android:layout_marginTop="6dp"
        android:background="@drawable/edit_text_border"/>

    <TextView
        android:id="@+id/password"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailinput"
        android:layout_centerInParent="true"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/notosans_regular"
        android:text="Password"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="337dp"
        android:id="@+id/passwordinput"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_centerInParent="true"
        android:layout_marginTop="6dp"
        android:background="@drawable/edit_text_border"></EditText>

    <TextView
        android:id="@+id/cp"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordinput"
        android:layout_centerInParent="true"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/notosans_regular"
        android:text="Confirm Password"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="337dp"
        android:layout_height="50dp"
        android:id="@+id/cpinput"
        android:layout_below="@+id/cp"
        android:layout_centerInParent="true"
        android:layout_marginTop="6dp"
        android:background="@drawable/edit_text_border"/>

    <androidx.appcompat.widget.AppCompatButton
        android:background="@color/white"
        android:id="@+id/back_to_welcome"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:drawableRight="@drawable/left_arrow"/>

    <androidx.appcompat.widget.AppCompatButton
        android:background="@color/white"
        android:id="@+id/signup"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="0dp"
        android:drawableLeft="@drawable/right_arrow__1_">

    </androidx.appcompat.widget.AppCompatButton>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>

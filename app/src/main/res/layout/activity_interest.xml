        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginStart="-20dp"
        android:layout_below="@+id/dance"
        android:layout_toRightOf="@+id/filmmedia"
        android:textSize="16sp"
        style="@android:style/Widget.Button"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_background_1"
        android:drawableStart="@drawable/ic_1"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:text="Coding   +   "
        android:textAlignment="viewStart" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/event"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/marketing"
        android:textSize="16sp"
        style="@android:style/Widget.Button"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_background_1"
        android:drawableStart="@drawable/ic_1"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:text="Event Management   +   "
        android:textAlignment="viewStart" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acting"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginStart="-15dp"
        android:layout_below="@+id/writing"
        android:layout_toRightOf="@+id/photography"
        android:textSize="16sp"
        style="@android:style/Widget.Button"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_background_1"
        android:drawableStart="@drawable/ic_1"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:text="Acting   +   "
        android:textAlignment="viewStart" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/art"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginStart="-20dp"
        android:layout_below="@+id/career"
        android:layout_toRightOf="@+id/enterpreneurship"
        android:textSize="16sp"
        style="@android:style/Widget.Button"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_background_1"
        android:drawableStart="@drawable/ic_1"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:text="Art   +   "
        android:textAlignment="viewStart" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/writing"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginStart="-10dp"
        android:layout_below="@+id/music"
        android:layout_toRightOf="@+id/literature"
        android:textSize="16sp"
        style="@android:style/Widget.Button"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_background_1"
        android:drawableStart="@drawable/ic_1"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:text="Writing   +   "
        android:textAlignment="viewStart" />

    <ImageButton
        android:background="@null"
        android:id="@+id/back"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/left_arrow"/>

    <ImageButton
        android:background="@null"
        android:id="@+id/next"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="0dp"
        android:src="@drawable/right_arrow__1_">

    </ImageButton>



</RelativeLayout>
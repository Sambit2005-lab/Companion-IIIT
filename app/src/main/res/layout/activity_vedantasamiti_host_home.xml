<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Host.vedantasamiti_host_home"
    android:background="@drawable/page_bckg">

    <TextView
        android:id="@+id/welcome_tech_society"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Welcome, VedantaSamiti Society's Host!"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/welcome_tech_society"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_event_techsociety"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginRight="60dp"
                android:padding="8dp"
                android:text="Add event on my calendar"
                android:background="@drawable/background_intro">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_announcement_techsociety"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:padding="8dp"
                android:text="Add announcement"
                android:background="@drawable/background_intro">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/upload_event_images_techsociety"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginRight="60dp"
                android:text="Upload Event images"
                android:padding="8dp"
                android:background="@drawable/background_intro">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/upload_team_members"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:text="upload team member photos"
                android:padding="8dp"
                android:background="@drawable/background_intro">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="center">

            <EditText
                android:id="@+id/joining_link_techsociety"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Add joining link here">

            </EditText>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
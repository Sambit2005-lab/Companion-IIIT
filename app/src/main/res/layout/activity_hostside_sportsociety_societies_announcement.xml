<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/page_bckg">

    <ImageView
        android:id="@+id/uplaod_image_for_announcement"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="200dp"
        android:padding="8dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/upload_image_hostside">

    </ImageView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upload_image_announcement_techsociety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/uplaod_image_for_announcement"
        android:text="upload image"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:drawableRight="@drawable/upload_icon_white"
        android:padding="8dp"
        android:drawablePadding="8dp"
        android:background="@drawable/hostside_button_solidblue">

    </androidx.appcompat.widget.AppCompatButton>

    <EditText
        android:id="@+id/caption_announcement_techsociety"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/upload_image_announcement_techsociety"
        android:hint="Write a caption"
        android:padding="10dp">

    </EditText>

    <EditText
        android:id="@+id/post_by_designation"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/caption_announcement_techsociety"
        android:hint="Posted by (Your Designation)"
        android:padding="10dp">

    </EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/post_by_designation"
        android:text="save post"
        android:textColor="#ffffff"
        android:background="@drawable/save_button"
        >

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/save_post"
        android:text="cancel post"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/cancel_button"
        >

    </androidx.appcompat.widget.AppCompatButton>



</androidx.constraintlayout.widget.ConstraintLayout>